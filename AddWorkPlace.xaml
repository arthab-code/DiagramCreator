<Window x:Class="Grafik.AddWorkPlace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grafik"
        mc:Ignorable="d"
        Title="Dodaj miejsce pracy" Height="200" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock>Wpisz nazwę miejsca dyżurowania 
                <TextBox x:Name="WorkPlace" Width="100"></TextBox>
            </TextBlock>
            <Label></Label>
            <Button Width="70" Height="20" Click="AddPlace">Dodaj</Button>
        </StackPanel>
    </Grid>
</Window>
