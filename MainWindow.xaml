<Window x:Class="Grafik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grafik"
        mc:Ignorable="d"
        Title="AutoGrafik12" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button Background="DarkGreen" Grid.Row="0" Grid.Column="0">Pracownicy</Button>
        <Button Grid.Row="0" Grid.Column="1">Miejsce dyżurowania</Button>
        <Button Grid.Row="0" Grid.Column="2">Grafiki</Button>
        <Button Grid.Row="0" Grid.Column="3">Pomoc</Button>

        <ScrollViewer Grid.Row="1" Grid.Column="0">dsdsd</ScrollViewer>
        <TextBlock Background="LightGray" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"></TextBlock>
    </Grid>

</Window>
