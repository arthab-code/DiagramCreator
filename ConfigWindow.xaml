<Window x:Class="Grafik.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grafik"
        mc:Ignorable="d"
        Title="Pierwsze uruchomienie aplikacji" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" FontSize="20">Pierwsze uruchomienie programu.</TextBlock>
            <TextBlock HorizontalAlignment="Center" FontSize="20"> Aby zapewnić prawidłowe działanie aplikacji dodaj pierwsze miejsce dyżurowania:</TextBlock>
            <Label></Label>
            <TextBox x:Name="WorkPlace" Width="150"></TextBox>
            <Label></Label>
            <Button Width="100" Height="25" Click="AddWorkPlace">Dodaj</Button>
        </StackPanel>
    </Grid>
</Window>
